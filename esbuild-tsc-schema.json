{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "file": {
      "type": "string",
      "description": "The file to run"
    },
    "tsconfig": {
      "type": "string",
      "description": "The tsconfig.json path"
    },
    "engine": {
      "type": "string",
      "enum": ["bun", "node", "deno"]
    }
  },
  "required": ["file", "tsconfig", "engine"]
}
